-# This file is app/view/movies/index.html.haml
%h1 All Movies

%option = {:sort_by=>"title"}
= link_to "Sort Movies", controller = "movies#index?:sort_by=>'title'", action: "sort"

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
